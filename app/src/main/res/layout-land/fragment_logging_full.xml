<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoggingFullFragment"
    android:id="@+id/LoggingFullLayout">

    <TextView
        android:id="@+id/textViewPackCount"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/textview_fps_null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.app.simostools.SwitchButton
        android:id="@+id/buttonLoggingBack"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="@string/button_back"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonLoggingReset" />

    <com.app.simostools.SwitchButton
        android:id="@+id/buttonLoggingReset"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="@string/button_reset"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonLoggingBack"
        app:layout_constraintEnd_toStartOf="@+id/buttonLoggingBack"
        app:layout_constraintStart_toEndOf="@+id/textViewPackCount" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:id="@+id/loggingLayoutScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>